@model AracKiralamaSitesiCoreProje.Models.Admin

@{
    ViewData["Title"] = "Admin Ekle";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Admin Ekle</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background: linear-gradient(135deg, #a29bfe, #81ecec);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Segoe UI', sans-serif;
        }

        .admin-form-card {
            background-color: white;
            padding: 40px;
            border-radius: 16px;
            box-shadow: 0 0 20px rgba(0,0,0,0.1);
            width: 100%;
            max-width: 450px;
        }

            .admin-form-card h3 {
                font-weight: bold;
                color: #2d3436;
            }

        .error-message {
            color: red;
            font-size: 0.9rem;
            margin-bottom: 15px;
        }
    </style>
</head>
<body>

    <div class="admin-form-card">
        <h3 class="text-center mb-4">Yeni Admin Oluştur</h3>

        @if (ViewBag.Hata != null)
        {
            <div class="error-message text-center">@ViewBag.Hata</div>
        }

        <form method="post">
            <div class="form-group mb-3">
                <label>Kullanıcı Adı</label>
                <input asp-for="KullaniciAdi" class="form-control" placeholder="Kullanıcı adı" required />
            </div>

            <div class="form-group mb-3">
                <label>Şifre</label>
                <input type="password" name="sifre1" class="form-control" placeholder="Şifre" required />
            </div>

            <div class="form-group mb-4">
                <label>Şifre Tekrar</label>
                <input type="password" name="sifre2" class="form-control" placeholder="Şifreyi tekrar girin" required />
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-success">Admin Hesabı Oluştur</button>
            </div>

            <div class="text-center mt-3">
                <a href="/Login/Login" class="text-decoration-none">Zaten hesabın var mı? Giriş yap</a>
            </div>
        </form>
    </div>

</body>
</html>
