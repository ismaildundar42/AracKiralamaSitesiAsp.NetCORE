@model AracKiralamaSitesiCoreProje.Models.Kiralama
@{
    Layout = null;
    ViewData["Title"] = "Müşteri Paneli";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>Müşteri Paneli</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            background: linear-gradient(135deg, #4ca1af, #c4e0e5);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Segoe UI', sans-serif;
        }

        .panel {
            background: white;
            padding: 30px;
            border-radius: 15px;
            max-width: 500px;
            width: 100%;
            box-shadow: 0 0 15px rgba(0,0,0,0.15);
        }

            .panel h2 {
                text-align: center;
                color: #007BFF;
                margin-bottom: 25px;
            }

        .table th {
            background-color: #f1f1f1;
            width: 40%;
        }
    </style>
</head>
<body>
    <div class="panel">
        <h2>Kiralama Bilgileriniz</h2>

        @if (ViewBag.Mesaj != null)
        {
            <div class="alert alert-info text-center">@ViewBag.Mesaj</div>
        }
        else
        {
            <table class="table table-bordered">
                <tr>
                    <th>Kira ID</th>
                    <td>@Model.KiraID</td>
                </tr>
                <tr>
                    <th>Başlangıç Tarihi</th>
                    <td>@Model.KiraBaslangic.ToShortDateString()</td>
                </tr>
                <tr>
                    <th>Bitiş Tarihi</th>
                    <td>@Model.KiraBitis.ToShortDateString()</td>
                </tr>
                <tr>
                    <th>Marka</th>
                    <td>@Model.Arac?.AracMarka</td>
                </tr>
                <tr>
                    <th>Model</th>
                    <td>@Model.Arac?.AracModel</td>
                </tr>
                <tr>
                    <th>Plaka</th>
                    <td>@Model.Arac?.AracPlaka</td>
                </tr>
            </table>
        }
    </div>
</body>
</html>
