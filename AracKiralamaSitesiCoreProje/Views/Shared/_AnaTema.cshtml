					<li class="nav-item">
						<a class="nav-link text-white" href="/AracKiralama/Index">Kiralama İşlemleri</a>
					</li>
				</ul>
			</div>
		</div>
	</nav>

	<div class="container mt-4">
		@RenderBody()
	</div>

	<footer class="bg-light text-center p-3 mt-5">
		<small>&copy; 2025 - Araç Kiralama Sitesi</small>
	</footer>

	@RenderSection("Scripts", required: false) <!-- GEREKLİ EKLEME -->
</body>
</html>
